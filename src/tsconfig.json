{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "WebWorker"],
    "composite": false,

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "outDir": "dist",
    "jsx": "react-jsx",

    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [".", "./**/*.d.ts"],
  "extends": "../tsconfig.json"
}
