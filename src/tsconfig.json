{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "composite": false,

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "paths": {
      // "@components/*": ["./components/*"],
      // "@pages/*": ["./pages/*"]
      "@/*": ["./*"]
    }
  },
  "include": ["."],
  "extends": "../tsconfig.json"
}
