{
  "name": "clean-tool-app",
  "author": {
    "name": "Yucky Hito",
    "email": "yucky.hito@essilor.com.sg"
  },
  "description": "A clean tool app for Essilor",
  "keywords": [
    "clean",
    "tool",
    "app",
    "essilor",
    "data"
  ],
  "license": "AGPL-3.0-or-later",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "yarn dlx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:clean": "tsc && vite build && vite preview"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.34.2",
    "@fluentui/react-icons": "^2.0.219",
    "@reduxjs/toolkit": "^1.9.7",
    "@tauri-apps/api": "^1.5.0",
    "fuse.js": "^6.6.2",
    "lodash": "^4.17.21",
    "plotly.js-cartesian-dist-min": "^2.26.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^1.3.0",
    "react-plotly.js": "^2.6.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.16.0",
    "scheduler": "0.20.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.0/xlsx-0.20.0.tgz"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@tauri-apps/cli": "^1.5.2",
    "@types/eslint": "^8.44.4",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.4",
    "@types/plotly.js-cartesian-dist-min": "npm:@types/plotly.js@*",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/react-plotly.js": "^2.6.1",
    "@types/scheduler": "^0.16.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "encoding": "^0.1.13",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-perfectionist": "^2.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-redux": "^4.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "modern-normalize": "^2.0.0",
    "prettier": "^3.0.3",
    "supports-color": "^9.4.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-lightningcss": "^0.0.5",
    "vite-plugin-mkcert": "^1.16.0",
    "vite-plugin-pwa": "^0.16.5",
    "workbox-window": "^7.0.0"
  },
  "overrides": {
    "rollup-plugin-terser": "@rollup/plugin-terser"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8",
    "yarn": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuckyh/clean-tool-app.git"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb",
      "airbnb-typescript",
      "airbnb/hooks",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:@typescript-eslint/stylistic-type-checked",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-redux/recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended",
      "plugin:json/recommended",
      "plugin:perfectionist/recommended-line-length",
      "plugin:optimize-regex/all",
      "plugin:lodash/canonical",
      "plugin:lodash-fp/recommended"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./tsconfig.json",
        "./src/tsconfig.json"
      ],
      "tsconfigRootDir": ".",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "react-redux",
      "react-refresh",
      "react-hooks",
      "prettier",
      "json-format",
      "perfectionist",
      "optimize-regex",
      "immutable",
      "lodash",
      "lodash-fp"
    ],
    "rules": {
      "perfectionist/sort-imports": "off",
      "immutable/no-let": "error",
      "immutable/no-this": "error",
      "import/extensions": "off",
      "no-console": "off",
      "no-param-reassign": "off",
      "react/jsx-props-no-spreading": "off",
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "bracketSameLine": true
  },
  "packageManager": "yarn@4.0.0-rc.53"
}
