{
  "name": "clean-tool-app",
  "author": {
    "name": "Yucky Hito",
    "email": "yucky.hito@essilor.com.sg"
  },
  "description": "A clean tool app for Essilor",
  "keywords": [
    "clean",
    "tool",
    "app",
    "essilor",
    "data"
  ],
  "license": "AGPL-3.0-or-later",
  "webManifest": {
    "name": "CLEaN Tool App",
    "short_name": "CleanToolApp",
    "description": "A clean tool app for Essilor",
    "theme_color": "#0F6CBD"
  },
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.29.3",
    "@tauri-apps/api": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@griffel/eslint-plugin": "^1.3.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tauri-apps/cli": "^1.4.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-helmet": "^6.1.6",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "lightningcss": "^1.21.7",
    "modern-normalize": "^2.0.0",
    "prettier": "^3.0.2",
    "react-helmet": "^6.1.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-lightningcss": "^0.0.5",
    "vite-plugin-pwa": "^0.16.4",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuckyh/clean-tool-app.git"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@griffel/recommended",
      "plugin:@typescript-eslint/stylistic-type-checked",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "dist",
      "*.config.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "tsconfig.json",
        "./src/tsconfig.json"
      ],
      "tsconfigRootDir": ".",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react-refresh",
      "prettier",
      "@griffel"
    ],
    "rules": {
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "bracketSameLine": true
  }
}
