{
  "name": "clean-tool-app",
  "author": {
    "name": "Yucky Hito",
    "email": "yucky.hito@essilor.com.sg"
  },
  "description": "A clean tool app for Essilor",
  "keywords": [
    "clean",
    "tool",
    "app",
    "essilor",
    "data"
  ],
  "license": "AGPL-3.0-or-later",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:clean": "tsc && vite build && vite preview"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.31.1",
    "@fluentui/react-icons": "^2.0.216",
    "@reduxjs/toolkit": "^1.9.5",
    "@tauri-apps/api": "^1.4.0",
    "fuse.js": "^6.6.2",
    "plotly.js-cartesian-dist": "^2.26.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-helmet-async": "^1.3.0",
    "react-plotly.js": "^2.6.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.16.0",
    "scheduler": "0.20.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.0/xlsx-0.20.0.tgz"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.4.0",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.6.0",
    "@types/plotly.js": "^2.12.26",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-plotly.js": "^2.6.0",
    "@types/scheduler": "^0.16.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-perfectionist": "^2.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-redux": "^4.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "lightningcss": "^1.21.8",
    "modern-normalize": "^2.0.0",
    "plotly.js": "^2.26.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-lightningcss": "^0.0.5",
    "vite-plugin-mkcert": "^1.16.0",
    "vite-plugin-pwa": "^0.16.5",
    "workbox-window": "^7.0.0"
  },
  "overrides": {
    "rollup-plugin-terser": "@rollup/plugin-terser"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8",
    "yarn": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuckyh/clean-tool-app.git"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:@typescript-eslint/stylistic-type-checked",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-redux/recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended",
      "plugin:json/recommended",
      "plugin:perfectionist/recommended-natural",
      "plugin:optimize-regex/all"
    ],
    "ignorePatterns": [
      "dist",
      "*.config.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "tsconfig.json",
        "./src/tsconfig.json"
      ],
      "tsconfigRootDir": ".",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react-refresh",
      "prettier",
      "react-redux",
      "json-format",
      "perfectionist",
      "optimize-regex"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/consistent-type-imports": "error",
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "bracketSameLine": true
  },
  "packageManager": "yarn@3.6.2"
}
